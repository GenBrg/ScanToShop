<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.scantoshop">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.shoplist.ItemDescriptionActivity"></activity>
        <activity android:name=".ui.personalize.NutritionActivity" />
        <activity android:name=".ui.personalize.AllergyDetailActivity" />
        <activity android:name=".ui.history.HistoryDetailActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".barcodescanner.LivePreviewActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".barcodescanner.SettingsActivity"
            android:exported="false" />
    </application>

</manifest>