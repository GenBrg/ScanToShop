<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_shoplist">

    <fragment
        android:id="@+id/navigation_shoplist"
        android:name="com.example.scantoshop.ui.shoplist.ShoplistFragment"
        android:label="@string/title_shoplist"
        tools:layout="@layout/fragment_shoplist" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.scantoshop.ui.history.HistoryFragment"
        android:label="@string/title_history"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.example.scantoshop.ui.favorite.FavoriteFragment"
        android:label="@string/title_favorite"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.scantoshop.ui.personalize.PersonalizeFragment"
        android:label="@string/title_personalize"
        tools:layout="@layout/fragment_personalize" />

</navigation>